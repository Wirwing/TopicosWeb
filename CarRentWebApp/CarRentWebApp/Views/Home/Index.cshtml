@{
    ViewBag.Title = "Home Page";
}


@model System.Collections.Generic.List<CarRentWebApp.Models.Car>

<div class="jumbotron">
    <h1>Tópicos de Servicios Web</h1>
    <p class="lead">Proyecto aplicativo final del curso semestre Agosto-Diciembre 2014</p>
    <p class="lead">Integrantes: <b>Irving Caro</b> e <b>Ileana Ontiveros</b></p>
</div>

<h3>Autos disponibles en renta</h3>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Nombre</th>
                <th>Proveedor</th>
                <th>Operaciones</th>
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Provider</td>
                    <td>
                        @Html.ActionLink("Rentar", "RentCar", new { id = item.Id, provider = item.Provider })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>